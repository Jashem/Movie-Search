<% include ./Layouts/header %>
<div class="container-fluid">
  <ul class="nav justify-content-end nav-pills mt-2">
    <li class="nav-item"><a class="nav-link active" href="/">Search</a></li>
  </ul>

  <h1>Results</h1>

  <div class="row text-center list">
    <% data["Search"].forEach(function(movie) { %>
    <div class="col-lg-2 col-md-4 col-xs-6 col-sm-6 list-item mb-2">
      <div class="img-thumbnail">
        <img
          src="<%= movie['Poster'] %>"
          class="img-fluid"
          onerror="this.onerror=null;this.src='https://dubsism.files.wordpress.com/2017/12/image-not-found.png';"
        />
        <div class="caption">
          <h5 class="card-title"><%= movie["Title"] %></h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Year: <%= movie["Year"] %></li>
            <li class="list-group-item">Type: <%= movie["Type"] %></li>
            <li class="list-group-item">
              <a
                target="_blank"
                href="https://www.imdb.com/title/<%= movie['imdbID'] %>"
                class="btn btn-outline-primary"
                ><i class="fab fa-imdb fa-2x"></i
              ></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include ./Layouts/footer %>
